{
  "name": "@inexorgame/inexor-flex",
  "version": "0.9.0-preview8",
  "description": "Scripting environment for Inexor.",
  "scripts": {
    "preinstall": "npm run localinstall",
    "localinstall": "yarn add file:server/api/ file:src/console/ file:src/context/ file:src/entities/ file:src/gameclient/ file:src/gameserver/ file:src/instances/ file:src/interfaces/ file:server/util/logger/ file:src/logging/ file:src/media/ file:server/util/path/ file:src/profiles/ file:src/releases/ file:src/treeclient/ file:src/types/",
    "start": "node server/index.js --profile  $npm_package_config_profile",
    "stop": "./inexor flex shutdown",
    "restart": "./inexor flex restart",
    "test": "mocha \"src/*/test/*.js\" \"server/test/*.js\" \"server/*/*/test/*.js\" --harmony",
    "docs": "jsdoc -c .jsdoc.json",
    "lint": "eslint .",
    "dev": "node server/index.js --profile=devenv",
    "server": "node server/index.js --profile=server",
    "shell": "node inexor.js shell"
  },
  "bin": {
    "inexor-flex": "inexor.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/inexorgame/inexor-flex.git"
  },
  "keywords": [
    "inexor",
    "gaming"
  ],
  "author": "The Inexor Team",
  "license": "Zlib",
  "bugs": {
    "url": "https://github.com/inexorgame/code/issues"
  },
  "homepage": "https://github.com/inexorgame/inexor-flex#readme",
  "engines": {
    "node": ">=6.9.1"
  },
  "dependencies": {
    "@inexorgame/tree": "^1.0.3",
    "circular-json": "^0.3.1",
    "cors": "^2.8.3",
    "express": "^4.15.2",
    "express-ws": "^3.0.0",
    "figlet": "^1.2.0",
    "npid": "^0.4.0",
    "portscanner": "^2.1.1",
    "prettyjson": "^1.2.1",
    "toml": "^2.3.2",
    "tomlify": "^0.2.0",
    "wait-on": "^2.0.2",
    "xdg-basedir": "^3.0.0",
    "yargs": "^7.0.2",
    "yarn": "^1.1.0"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "chai-iterator": "^1.1.4",
    "eslint": "^3.19.0",
    "jsdoc": "^3.4.3",
    "minami": "^1.1.1",
    "mocha": "^3.2.0",
    "mocha-junit-reporter": "^1.13.0"
  },
  "config": {
    "profile": "client"
  }
}
